
local D=Data
local C=D.Color
local TT=D.TriggerType

-- Single-lane world
local W=D.init_data(
	3,18,
	C.Black,

	2,2,
	C.Red
)

-- White channel
D.SR(W, 2,17, 2, false, C.White)

-- Presenter trigger
D.M_TR(
	W, D.G_SPX(W), D.G_SPY(W),
	TT.Message,
	{"There is only one way out."}
)

-- End
D.M_TR(
	W, 2,17,
	TT.ChangeWorld,
	{"world_2"}
)
D.ST(W, 2,17, C.Red)

return W
